<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
	  <th>Thumbnail</th>
      <th>Url</th>
      <th>Ops</th>
      <th>Ba</th>
      <th>Hr</th>
      <th>Rbi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
		<td><%= image_tag player.thumbnail_url || "acuna.jpg" %></td>
        <td><%= player.url %></td>
        <td><%= player.ops %></td>
        <td><%= player.ba %></td>
        <td><%= player.hr %></td>
        <td><%= player.rbi %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

