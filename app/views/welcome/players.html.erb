


  
    <div class="section">

	  <div class="row">
		  
	      <% @players.each do |player|%>
	
	          
	      
		  
	      <div class="col s12 m4">
	        <div class="card">
	          <div class="card-image">
	            <%= image_tag(player.thumbnail_url || "bg.jpg",:class=>"responsive-img")%>
	            <span class="card-title gold-text"><%= player.name %></span>
				
	            <a class="btn-floating halfway-fab waves-effect waves-light red pulse" href="<%= player.url %>"><i class="fas fa-share-alt"></i></a>
	          </div>
	          <div class="card-content">
				<table>
				        <thead>
				          <tr>
				              <th>OPS</th>
				              <th>BA</th>
				              <th>HR</th>
							  <th>RBI</th>
				          </tr>
				        </thead>

				        <tbody>
				          <tr>
				            <td><%= player.ops %></td>
				            <td><%= player.ba %></td>
				            <td><%= player.hr %></td>
							<td><%= player.rbi %></td>
				          </tr>
				       
				        </tbody>
				      </table>
	          </div>
	        </div>
	      </div>
	      <% end %>
		  
		  
	    </div>

    </div>
    <br><br>
